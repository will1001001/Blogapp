<h2>Lista de categorias</h2>
<hr>
<a href='/admin/categorias/add'><buttom class="btn btn-success">Adcionar nova categoria</buttom></a>
{{#each Categorias}}
    <div class='card mt-4'>
        <div class='card-body'>
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data de criação: {{date}}</small><br>
            <a href='/admin/categorias/edit/{{_id}}'><button class="btn btn-success mt-4">Editar categoria</button></a>
            <form action='/admin/Categorias/deletar' method='POST'>
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Excluir categoria</button>
            </form>
        </div>
    </div>
    {{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}