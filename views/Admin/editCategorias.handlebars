{{#each erros}}
    <div class='alert alert-danger'>{{texto}}</div>
    {{else}}
{{/each}}
<h1>Editar Categoria:</h1>
<div class="card">
    <div class="card-body">
        <form action = '/admin/Categorias/edit'method="POST">
            <input type='hidden' name="id" value="{{Categorias._id}}"></input>
            <label for="name">Nome:</label>
                <input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control" value='{{Categorias.nome}}'>
            <label for="name">Slug:</label>
                <input type="text" id="slug" name="slug" placeholder="Slug da categoria" class="form-control" value='{{Categorias.slug}}'>
            <br>
                <button type='submit' class='btn btn-success'>Editar categoria</button><br>
                
            
        </form>
    </div>
</div>
