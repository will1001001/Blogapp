<h2>Lista de Postagens</h2>
<hr>
<a href='/admin/postagens/add'><buttom class="btn btn-success">Adcionar nova postagem</buttom></a>
{{#each Postagens}}
    <div class="card">
        <div class="card-body">
            <h4> Titulo: {{ titulo}}</h4>
            <p> Descrição: {{ descricao}}</p>
            <small> Data: {{ data}}</small>
            <small> Categoria: {{ categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Editar postegm</button></a><br>
             <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-2">Deletar postegm</button></a>
        </div>
    </div>
    {{else}}
    <p>Nenhuma postagem registrada</p>
{{/each}}
